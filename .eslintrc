{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "phantomjs": true
  },
  "rules": {
    "block-spacing": [
      "error",
      "always"
    ],
    "complexity": "off",
    "react/jsx-no-bind": "off",
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "max-lines": [
      "error",
      {
        "max": 150,
        "skipComments": true,
        "skipBlankLines": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always",
      {
        "arraysInObjects": false,
        "objectsInObjects": false
      }
    ],
    "one-var": [
      "error",
      "never"
    ],
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before"
        }
      }
    ],
    "lodash/chaining": [
      "error",
      "never"
    ],
    "react/jsx-curly-spacing": [
      "error",
      {
        "when": "never",
        "children": true
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-restricted-syntax": [
      "warn",
      {
        "message": "☀️ Plz avoid bare strings inside JSX ☀️",
        "selector": "JSXElement[children.length > 1] > Literal[value=/\\w+/]"
      }
    ],
    "no-unused-vars": [
      "error", 
      {
        "varsIgnorePattern": "^_" ,
      }
    ]
  },
  "extends": [
    "react-app",
    "sparkpost",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "lodash",
    "jest",
    "react-hooks"
  ],
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "max-lines": "off"
      }
    }
  ]
}
